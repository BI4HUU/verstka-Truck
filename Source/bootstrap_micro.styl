*, *::before, *::after
	box-sizing border-box
body
	margin 0
	font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
	// font-size 1rem
	font-weight 400
	line-height 1.5
	color #212529
	text-align left
	background-color #ffffff
.container-fluid
	max-width 100%
	padding-right 15px
	padding-left 15px
	margin-right auto
	margin-left auto

.container
	width 100%
	padding-right 15px
	padding-left 15px
	margin-right auto
	margin-left auto
.row
	display flex
	flex-wrap wrap
	margin-right -15px
	margin-left -15px

.col, .col-12, .col-sm-4, .col-sm-6, .col-sm-8, .col-md-6, .col-md-7, .col-md-5, .col-md-4
	position relative
	width 100%
	min-height 1px
	padding-right 15px
	padding-left 15px
.col
	-ms-flex-preferred-size 0
	flex-basis 0
	-ms-flex-positive 1
	flex-grow 1
	max-width 100%
.col-12 
	-ms-flex 0 0 100%
	flex 0 0 100%
	max-width 100%
.nav
	display flex
	flex-wrap wrap
.justify-content-between
	justify-content space-between
.align-self-center
	align-self center
.pos-r
	position relative
.pos-a
	position absolute
@media (min-width: 576px)
	.container
		width 100%
	.col-sm-4
		-ms-flex 0 0 33.333333%
		flex 0 0 33.333333%
		max-width 33.333333%
	.col-sm-6
		flex 0 0 50%
		max-width 50%
	.col-sm-8 
		-ms-flex 0 0 66.666667%
		flex 0 0 66.666667%
		max-width 66.666667%
@media (min-width: 768px)
	.col-md-4
		flex: 0 0 33.333333%
		max-width: 33.333333%
	.col-md-5
		flex 0 0 41.666667%
		max-width 41.666667%
	.col-md-6
		-ms-flex 0 0 50%
		flex 0 0 50%
		max-width 50%
	.col-md-7
		flex 0 0 58.333333%
		max-width 58.333333%
	.container
		width 100%
@media (min-width: 992px)
	.container
		width 100%
		// max-width 960px
@media (min-width: 1200px)
	.container
		max-width 1140px
.d-flex
	display flex
.align-items-center
	-ms-flex-align center
	align-items center
.py60
	padding-top 60px
	padding-bottom 60px
.py80
	padding-top 80px
	padding-bottom 80px
.px20
	padding-right 20px
	padding-left 20px
.my20
	margin-top 20px
	margin-bottom 20px